{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "project": true,
    "tsconfigRootDir": "__dirname"
  },
  "root": true,
  "rules": { "indent": ["error", 2, { "SwitchCase": 1 }] },
  "exclude": ["next.config.mjs"]
}
